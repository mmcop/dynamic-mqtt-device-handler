FROM python:3.12.7-slim

WORKDIR /app

ARG RABBITMQ_HOST
ARG RABBITMQ_USER
ARG RABBITMQ_PASSWORD
ARG RABBITMQ_VHOST
ARG ELASTICSEARCH_HOST
ARG ELASTICSEARCH_CONNECTION
ARG ELASTICSEARCH_PORT
ARG DATABASE_HOST
ARG DATABASE_NAME
ARG DATABASE_PASSWORD
ARG DATABASE_USERNAME
ARG DEVICE_MQTT_SERVICE_URL
ARG API_KEY

ENV RABBITMQ_HOST=${RABBITMQ_HOST}
ENV RABBITMQ_USER=${RABBITMQ_USER}
ENV RABBITMQ_PASSWORD=${RABBITMQ_PASSWORD}
ENV RABBITMQ_VHOST=${RABBITMQ_VHOST}
ENV ELASTICSEARCH_HOST=${ELASTICSEARCH_HOST}
ENV ELASTICSEARCH_CONNECTION=${ELASTICSEARCH_CONNECTION}
ENV ELASTICSEARCH_PORT=${ELASTICSEARCH_PORT}
ENV DATABASE_HOST=${DATABASE_HOST}
ENV DATABASE_NAME=${DATABASE_NAME}
ENV DATABASE_USERNAME=${DATABASE_USERNAME}
ENV DATABASE_PASSWORD=${DATABASE_PASSWORD}
ENV DEVICE_MQTT_SERVICE_URL=${DEVICE_MQTT_SERVICE_URL}
ENV API_KEY=${API_KEY}

COPY services /app/services
COPY shared /app/shared
COPY services/user_device_connection_permission_service/requirements.txt .

RUN pip install --no-cache-dir -r requirements.txt

ENV PYTHONPATH=/app

CMD ["python", "-m", "services.user_device_connection_permission_service.main"]